---
// Imports
const { frontmatter } = Astro.props

//Layout Components
import Layout from './Layout.astro'

// Section Components
import BlogPostHero from '../components/blocks/blog/BlogPostHero.astro'
import { basicTextLg } from '../utils/classes'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | AI Hair Extension Selling Platform`,
	description: `${frontmatter.description}`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BlogPostHero
		tags={frontmatter.tags}
		title={frontmatter.title}
		author={frontmatter.author}
		publishDate={frontmatter.pubDate.toLocaleDateString('en-US', {
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		})}
	/>

        <div class:list={['mx-auto max-w-3xl px-6 py-12 lg:py-24', basicTextLg]}>
                <slot />
        </div>
</Layout>
