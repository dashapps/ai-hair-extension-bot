---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import FeatureRow from '../components/blocks/features/FeatureRow.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import FAQ from '../components/blocks/FAQ/Basic.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg-01.webp'
// - SEO
const SEO = {
	title: 'AI Hair Extension',
	description: 'AI Hair Extension — превью результата до наращивания, комьюнити и инструменты для мастеров и бизнеса.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<FeatureRow />
    <Testimonial 
      classes="bg-primary-800"
      blockquote="Волосы — это оружие женщины. Они меняют не только образ, но и возраст в глазах окружающих."
      figcaption=""
      cite=""
    />
    <FAQ classes="bg-slate-50 dark:bg-neutral-900/40" />
    <CTA 
      sectionClasses="bg-neutral-100 dark:bg-neutral-900/40"
      mode="dark"
      bg={undefined}
      ctaClasses="!shadow-none"
      title="Готова к трансформации?"
      text="Осторожно! После примерки может возникнуть острое желание записаться к мастеру — мы предупредили. Но если не боишься — просто начни: всё бесплатно и быстро."
      buttonLabel="Попробовать бесплатно"
      buttonLink="/"
    />
</Layout>
