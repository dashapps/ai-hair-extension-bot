---
// Solutions Index Page
// ------------
// Description: The blog index page.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

// Content
// - SEO
const SEO = {
	title: 'AI Hair Extension | Решения и кейсы',
	description:
		'Подборка решений, кейсов и сценариев внедрения AI Hair Extension для школ, салонов и бьюти-бизнеса.'
}
// - Page Header
const header = {
	title: 'Боты, мини-приложения или платформа? Что поможет повысить чек в&nbsp;твоей сфере?',
	text: 'Каждая сфера требует своего решения. Чем отличается бот, мини-приложение и&nbsp;платформа? И что подойдёт именно тебе?'
}

const allPosts = await getCollection('blog')
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={allPosts} />
</Layout>
