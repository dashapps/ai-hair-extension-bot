---
// Masters additional gallery swiper (no heading)
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import HeroSwiper from './HeroSwiper.astro'

// Screenshots 8..12 from /public
const screenshots = [
  '/8ru_m.webp',
  '/9ru_m.webp',
  '/10ru_m.webp',
  '/11ru_m.webp',
  '/12ru_m.webp',
]
---

<Section id="masters-gallery" padding="none" classes="bg-neutral-100 dark:bg-neutral-900/40 !overflow-visible">
  <Row>
    <Col span="12">
      <div class="relative z-10 mt-16 -mx-6">
        <HeroSwiper screenshots={screenshots} />
      </div>
    </Col>
  </Row>
</Section>
