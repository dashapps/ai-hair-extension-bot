---
// Signup Modal
// ------------
// Description: A modal with a form to sign up.

// Components
// - UI
import Modal from '../../ui/Modal.astro'
import Form from '../../ui/forms/Form.astro'
import FormField from '../../ui/forms/partials/FormField.astro'
import InputField from '../../ui/forms/form-elements/InputField.astro'
import Button from '../../ui/Button.astro'
import { Icon } from 'astro-icon/components'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Modal id="signup" classes={classes} title="Оставить заявку">
	<p class="mb-0">Оставьте контакт, если хотите первыми узнавать об обновлениях AI Hair Extension и новых инструментах для бьюти.</p>
	<Form>
		<FormField>
			<InputField type="email" id="email" label="E-mail" />
		</FormField>
		<Button style="primary" type="submit" classes="w-full" size="lg">Отправить</Button>
	</Form>
</Modal>
