---
// Basic Cards grid Section
// ------------
// Description: A grid of cards with basic contact information in a 4 column layout.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/BasicCard.astro'
import { BOOKING_LINK } from '../../../config/bookingLink'

// 	Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="requests" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-balance">Интегрируем <strong>ИИ-инструменты</strong> в твою бизнес-модель</h2>
			<p class="pb-0 text-lg">
				От демо-превью до ботов-диагностов и консультантов, которые помогают выбрать процедуру или продукт.
			</p>
		</Col>
	</Row>
	<Row classes="items-stretch">
		<Col span="3" classes="h-full">
			<Card
				title="Превью «до/после»"
				subtitle="Покажи клиенту результат — и продай услугу с его помощью."
				icon="rocket"
				classes="text-center h-full flex flex-col dark:!bg-neutral-800/50"
				link={BOOKING_LINK}
			/>
		</Col>
		<Col span="3" classes="h-full">
			<Card
				title="Бот-диагност"
				subtitle="Расскажет о состоянии волос, кожи или сроках пути к телу мечты в конкретном сценарии."
				icon="document-text"
				classes="text-center h-full flex flex-col dark:!bg-neutral-800/50"
				link={BOOKING_LINK}
			/>
		</Col>
		<Col span="3" classes="h-full">
			<Card
				title="Бот-консультант"
				subtitle="Поможет выбрать процедуры или товары и не забудет про апсейлы."
				icon="bolt"
				classes="text-center h-full flex flex-col dark:!bg-neutral-800/50"
				link={BOOKING_LINK}
			/>
		</Col>
		<Col span="3" classes="h-full">
			<Card
				title="Монетизация ×4"
				subtitle="Расскажи о своей специфике — предложим решение, которое поднимает чек или даёт пассивный доход."
				icon="chat-bubble-left-ellipsis"
				classes="text-center h-full flex flex-col dark:!bg-neutral-800/50"
				link={BOOKING_LINK}
			/>
		</Col>
	</Row>
</Section>
