---
// Basic Contact Form
// ------------
// Description: A basic contact form with fields for first name, last name, email, phone number and message.
// Properties:
// - classes: Additional classes to be added to the block
// ------------

// Components
// - UI
import Card from '../../ui/cards/partials/Card.astro'
import CardBody from '../../ui/cards/partials/CardBody.astro'
import Form from '../../ui/forms/Form.astro'
import FormField from '../../ui/forms/partials/FormField.astro'
import InputField from '../../ui/forms/form-elements/InputField.astro'
import TextArea from '../../ui/forms/form-elements/TextArea.astro'
import Button from '../../ui/Button.astro'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Card classes={classes}>
	<CardBody>
		<Form>
			<h2 class="text-2xl">Расскажите о запросе</h2>
			<FormField>
				<InputField type="text" id="firstName" label="Имя" required />
				<InputField type="text" id="company" label="Компания или проект" />
			</FormField>
			<FormField>
				<InputField type="email" id="email" label="Email" required placeholder="you@email.com" />
			</FormField>
			<FormField>
				<InputField type="tel" id="phone" label="Телефон или Telegram" />
			</FormField>
			<FormField><TextArea id="message" label="Что хотите автоматизировать" /></FormField>
			<Button style="primary" type="submit">Отправить</Button>
		</Form>
	</CardBody>
</Card>
