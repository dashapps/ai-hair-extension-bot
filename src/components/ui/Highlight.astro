---
// Highlight
// ------------
// Description: a simple component to highlight specific words or phrases
// Properties:
// - Type: the type of the highlight (1, 2, 3, 4)
// - classes: additional classes
// - colorFrom: For the type 4 (gradient) the initial color
// - colorTo: For the type 4 (gradient) the final color

// Props
type Props = {
	type?: string
	classes?: string
	colorFrom?: string
	colorTo?: string
}
const { type = '1', classes, colorFrom, colorTo } = Astro.props
const typeClasses: Record<string, string> = {
        '1': 'text-primary-500',
        '2': 'px-4 text-white before:bg-primary-500',
        '3': 'px-4 text-white before:-rotate-2 before:bg-primary-500 lg:before:-bottom-2 lg:before:-top-2',
        '4': 'bg-gradient-to-r bg-clip-text text-transparent'
}
---

<span
        class:list={[
                'relative inline-block before:absolute before:-bottom-1 before:-left-1 before:-right-1 before:-top-1 before:z-[-1]',
                typeClasses[type],
                { [`${classes}`]: classes }
        ]}
        style=`background-image:linear-gradient(to right, ${colorFrom} 0%, ${colorTo} 100%)`
>
        <slot />
</span>
